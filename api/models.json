{
    "$def": {
        "TrackResource": {
            "description": "Describes the structure of successful responses to GET requests asking for a single track",
            "type": "object",
            "properties": {
                "data": { "$ref": "#/$def/Track" }
            },
            "required": [ "data" ],
            "additionalProperties": false
        },
        "TracksResource": {
            "description": "Describes the structure of successful responses to GET requests asking for a collection of tracks",
            "type": "object",
            "properties": {
                "data": {
                    "type": "array",
                    "items": { "$ref": "#/$def/Track" }
                }
            },
            "required": [ "data" ],
            "additionalProperties": false
        },
        "NewTrackResource": {
            "description": "Describes the structure of POST requests for creating new tracks",
            "type": "object",
            "properties": {
                "data": {
                    "type": "object",
                    "properties": {
                        "attributes": { "$ref": "#/$def/TrackInfo" }
                    },
                    "required": [ "attributes" ],
                    "additionalProperties": false
                }
            },
            "required": [ "data" ],
            "additionalProperties": false
        },
        "Track": {
            "description": "Defines the data model for music tracks",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "readOnly": true
                },
                "attributes": { "$ref": "#/$def/TrackInfo" }
            },
            "required": [ "id", "attributes" ],
            "additionalProperties": false
        },
        "TrackInfo": {
            "description": "Contains information about a single music track",
            "type": "object",
            "properties": {
                "title": { "type": "string" }
            },
            "required": [ "title" ],
            "additionalProperties": false
        },
        "Error": {
            "description": "Defines the structure of error responses as returned by server",
            "type": "object",
            "properties": {
                "errors": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "status": { "type": "string" },
                            "title": { "type": "string" },
                            "detail": { "type": "string" },
                            "source": {
                                "type": "object",
                                "properties": {
                                    "header": { "type": "string" }
                                },
                                "required": [ "header" ],
                                "additionalProperties": false
                            }
                        },
                        "required": [ "status", "title" ],
                        "additionalProperties": false
                    }
                }
            },
            "required": [ "errors" ],
            "additionalProperties": false
        }
    }
}